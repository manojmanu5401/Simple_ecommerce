<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add product</title>
    <link rel="stylesheet" href="style2.css">
     <!-- ................................bootstap links..................................... -->
     <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-BmbxuPwQa2lc/FVzBcNJ7UAyJxM6wuqIj61tLrc4wSX0szH/Ev+nYRRuWlolflfl" crossorigin="anonymous">
</head>
<body>
    <form action="/add" method="POST">
    <div class="container head">
        <div class="row">
            <div class="col">
                <h1>Add Product</h1>
            </div>
            <div class="col button">
                <button type="submit" class="btn btn-success">Save</button>
                <a href="/"><button type="button" class="btn btn-danger">Cancel</button></a>
                </div>
            </div>
        </div>
    <div class="container bod">
            <div class="input-group mb-3" style="width: 60%">
                <label for="validationDefault01" class="form-label"></label>
                <input name="sku" type="text" class="form-control" placeholder="SKU" aria-label="SKU" aria-describedby="basic-addon1" id="validationDefault01" required>
              </div>
              <div class="input-group mb-3" style="width: 60%">
                <label for="validationDefaultUsername" class="form-label"></label>
                <input name="item_name" type="text" class="form-control" placeholder="Name" aria-label="name" aria-describedby="basic-addon1" id="validationDefaultUsername" required>
              </div>
              <div class="input-group mb-3" style="width: 60%">
                <label for="validationDefault02" class="form-label"></label>
                <input name="price" type="number" class="form-control" step="any" placeholder="Price ($)" aria-label="price" aria-describedby="basic-addon1" id="validationDefault02" required>
              </div>
              <div>
                <label for="validationDefault03" class="form-label"></label>
                <select name="select" class="form-select name" style="width: 60%;margin-bottom: 16px" id="validationDefault03" required>
                  <option selected disabled value="">Type Switcher</option>
                  <option value="dvd">DVD</option>
                  <option value="book">Book</option>
                  <option value="furniture">Furniture</option>
                </select>
            </div>  
              <div class="input-group mb-3 show" style="width: 60%" id="dvd">
                <label for="validationDefault04" class="form-label"></label>
                <span class="input-group-text" id="addon-wrapping">*Please provide size</span>
                <input name="size" type="number" class="form-control " placeholder="Size (MB)" aria-label="size" aria-describedby="basic-addon1" id="validationDefault04" required>
              </div>
              <div class="input-group mb-3 show" style="width: 60%" id="book">
                <label for="validationDefault05" class="form-label"></label>
                <span class="input-group-text" id="addon-wrapping">*Please provide weight</span>
                <input name="weight" type="number" class="form-control " placeholder="Weigth (kg)" aria-label="weigth" aria-describedby="basic-addon1" id="validationDefault05" required>
              </div>
              <div class="input-group mb-3 show" style="width: 60%" id="furniture">
                <label for="validationDefault06" class="form-label"></label>
                <span class="input-group-text" id="addon-wrapping">*Please provide dimensions</span>
                <input  name="height" type="number" class="form-control " placeholder="Height (cm)" aria-describedby="basic-addon1" id="validationDefault06" required>
                <input  name="width" type="number" class="form-control " placeholder="Width (cm)" aria-describedby="basic-addon1" id="validationDefault06" required>
                <input name="length" type="number" class="form-control " placeholder="Length (cm)" aria-describedby="basic-addon1" id="validationDefault06" required>
              </div>
        </form>
    </div>
</body>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script>
    $(document).ready(function(){
        $('.name').on('change', function(){
            $(".show").hide();
            console.log($(this).val())
            if ($(this).val()=='dvd'){
                $("#validationDefault05").val(0);
                $("input[name=height]").val(0);
                $("input[name=width]").val(0);
                $("input[name=length]").val(0);
            }
            if ($(this).val()=='book'){
                $("#validationDefault04").val(0);
                $("input[name=height]").val(0);
                $("input[name=width]").val(0);
                $("input[name=length]").val(0);
            }
            if ($(this).val()=='furniture'){
                $("#validationDefault05").val(0);
                $("#validationDefault04").val(0);
            }
            $("#" + $(this).val()).show();
        }).change()
    });
</script>

