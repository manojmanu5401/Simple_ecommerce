<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="style.css">

    <!-- ................................bootstap links..................................... -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-BmbxuPwQa2lc/FVzBcNJ7UAyJxM6wuqIj61tLrc4wSX0szH/Ev+nYRRuWlolflfl" crossorigin="anonymous">
</head>
<body>
  <form action="/" method="POST">


    <div class="container head">
        <div class="row">
            <div class="col">
                <h1>Product List</h1>
            </div>
            <div class="col button">
                <a href="/add"><button type="button" class="btn btn-success">Add</button></a>
                <button type="submit" class="btn btn-danger">Delete</button>
                </div>
            </div>  
        </div>
    <div class="container bod ">
        <div class="row row-cols-1 row-cols-md-4 g-4" id="row">
          <%if(data.length>0) { %>
            <% for(var i=0; i<data.length; i++ ) { %>
              <div class="col ">
                  <div class="card ">
                      <div class="card-body">
                        <h5 class="card-title ">
                            <div class="form-check">
                          <input class="form-check-input c" type="checkbox" value="true" id="flexCheckDefault" name="<%= data[i]['_id']%>" >
                        </div></h5>
                        <h6 class="card-subtitle mb-2 text-muted" style="margin-bottom: 0;" name="id"><%=data[i]['sku']%></h6>
                        <p class="card-text item_name" style="margin-bottom: 0;"><%=data[i]['itemname']%></p>
                        <p class="card-text price" style="margin-bottom: 0;"><%=data[i]['price']%>.00$</p>
                        <%if(data[i]['select']=='dvd') { %>
                          <p class="card-text dicp" style="margin-bottom: 0;">Size: <%=data[i]['size']%> MB</p>
                        <% } %>
                        <%if(data[i]['select']=='book') { %>
                          <p class="card-text dicp" style="margin-bottom: 0;">Weight: <%=data[i]['weight']%> kg</p>
                        <% } %>
                        <%if(data[i]['select']=='furniture') { %> 
                          <p class="card-text dicp" style="margin-bottom: 0;">Dimension: <%=data[i]['height']%>x<%=data[i]['width']%>x<%=data[i]['length']%></p>
                        <% } %>
                      </div>
                    </div>
              </div>
            <% } %>
          <% } %>
            
        
          </div>
    
    </div>
  </form>

</body>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
 
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/js/bootstrap.bundle.min.js" integrity="sha384-b5kHyXgcpbZJO/tY9Ul7kGkf1S0CWuKcCD38l8YkeH8z8QjE0GmW1gYU5S9FOnJ0" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.6.0/dist/umd/popper.min.js" integrity="sha384-KsvD1yqQ1/1+IA7gi3P0tyJcT3vR+NdBTt13hSJ2lnve8agRGXTTyNaBYmCR/Nwi" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/js/bootstrap.min.js" integrity="sha384-nsg8ua9HAw1y0W1btsyWgBklPnCUAFLuTMS2G72MMONqmOymq585AcH49TLBQObG" crossorigin="anonymous"></script>
</html>